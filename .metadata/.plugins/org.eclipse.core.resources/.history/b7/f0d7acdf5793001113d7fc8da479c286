<?xml version="1.0" encoding="utf-8"?>
<s:Button xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  emphasized="{logoutView.visible}"
	      label="Logout"
	      click="showLogoutView();"
		  > 
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>			
		<![CDATA[			
			import character.Inventory;
			
			import mx.managers.PopUpManager;
			
			import pkgInventory.*;
			
			import resizableTitleWindow.*;
			
			import spark.components.TitleWindow;
			
			import views.LogoutView;
			
			[Bindable]
			private var logoutView:LogoutView;
						
			
			//public var inv:pkgInventory.InventoryView_old;
			
			private function showLogoutView():void{
				
				if (inventoryView == null){
					inventoryView = PopUpManager.createPopUp(this, LogoutView,false) as LogoutView;
					inventoryView.setStyle("skinClass", ResizableTitleWindowSkin);
					inventoryView.inventory = this.inventory;
					//inv.visible = true;
				}				
				else{
					if (inventoryView.visible == false)
						inventoryView.visible = true;
					else
						inventoryView.visible = false;
				}
				
			}	
			
			public function clickHander(e:Event):void{		
			}
		]]>
	</fx:Script>	
	
	
</s:Button>
