package pkgInventory
{
	import mx.collections.ArrayList;

	public class Item
	{
		public var numAtributes:int;
		public var list_attributes:ArrayList;
		public var displayPath: String;
		public var itemType: int;
		public var itemName: String;
		public var category: int;
		public var isStackable: Boolean;
		
		// @Hoang: contructor for value object: item
		public function Item(itemType:int, itemName:String, displayPath:String,category:int=1, isStackable:Boolean = false)	{
			this.itemType = itemType;
			this.itemName = itemName;
			this.displayPath = displayPath;
			this.category = category;
			this.isStackable = isStackable;
		}

		
		
