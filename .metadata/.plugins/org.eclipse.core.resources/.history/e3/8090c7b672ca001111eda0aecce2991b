		<s:BitmapImage id="char_legs" source="{char.appearance_legs}"
					   width="{bmpImg.width}" height="{bmpImg.height}"
					   horizontalAlign="center"/>	
		<s:BitmapImage id="char_feet" source="{char.appearance_feet}"
					   width="{bmpImg.width}" height="{bmpImg.height}"
