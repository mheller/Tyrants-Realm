		<s:BitmapImage id="char_offhand" source="{char.appearance_offhand}"
					   width="{bmpImg.width}" height="{bmpImg.height}"
					   horizontalAlign="center"/>	

	</s:Group>

	<s:HGroup id="health_group">
		<s:Label text="H" fontSize="8"/>
