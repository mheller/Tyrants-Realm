<?xml version="1.0" encoding="utf-8"?>
<s:Button xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  label="Drop"
		  click="dropItem();"
		  > 
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>			
		<![CDATA[			
			import character.Inventory;
			import mx.controls.Alert;
			import mx.managers.PopUpManager;
			
			import resizableTitleWindow.*;
			
			import spark.components.TitleWindow;
			import views.TransferView;
			
			[Bindable]
			private var transferView:TransferView;
			
			
			//public var inv:pkgInventory.InventoryView_old;
			
			public function transferItem():void{
				
				if (transferView == null){
					transferView = PopUpManager.createPopUp(this, TransferView,false) as TransferView;
					transferView.setStyle("skinClass", ResizableTitleWindowSkin);
				}				
				else{
					if (transferView.visible == false)
						transferView.visible = true;
					else
						transferView.visible = false;
				}
				
				
				
			}	
			
			public function clickHander(e:Event):void {	
				transferItem();
			}
		]]>
	</fx:Script>	
	
	
</s:Button>
