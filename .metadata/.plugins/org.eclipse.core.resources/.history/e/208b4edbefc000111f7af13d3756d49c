		<s:Label id="map_player_stater" text="Stater: " fontWeight="bold"  fontSize="18"/>
	</s:Group>
	
	<s:Graphic id="mask" maskType="{MaskType.ALPHA}" cacheAsBitmap="true" > 
		<s:Ellipse y="70" width="200" height="200"> 
